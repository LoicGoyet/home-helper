{
  "files.exclude": {
    "node_modules/": true,
    "package-lock.json": true,
    "build/": false
  },
  "search.exclude": {
    "node_modules/": true,
    "package-lock.json": true,
    "build/": true
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
